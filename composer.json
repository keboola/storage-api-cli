{
  "name": "keboola/storage-api-cli",
  "description": "Keboola Storage API command line interface",
  "authors": [
    {
      "name": "Keboola",
      "email": "devel@keboola.com"
    }
  ],
  "license": "MIT",
  "require": {
    "keboola/php-temp": "^0.1",
    "keboola/storage-api-client": "^8.0",
    "keboola/symfony-console-nested-formatter-helper": "^0.1",
    "symfony/console": "^2.8",
    "symfony/filesystem": "^2.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "scripts": {
    "tests": "phpunit --debug",
    "phpcs": "phpcs -n --standard=psr2 --ignore=vendor --extensions=php .",
    "build": [
      "@phpcs",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-all --strict",
      "@build"
    ]
  },
  "autoload": {
    "psr-0": {"Keboola\\StorageApi\\Cli": "src/"}
  },
  "autoload-dev": {
    "psr-4": {"Keboola\\StorageApi\\Cli\\Tests\\": "tests/"}
  },
  "config": {
    "sort-packages": true
  }
}
